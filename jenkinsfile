pipeline {
    agent any 
    environment {
        BUILD_NUMBER = 'LATEST'
        registry = 'vmahecha07/nodefront'
        registryCredential = 'docker'
        dockerImage = ''
    }
    stages {
        stage('clone') {
            steps {
                echo 'clone the repo'
                sh 'rm -fr rp2'
                git branch: 'develop', url: 'https://github.com/vmahecha/rp2.git'
                sh 'pwd'
            }
        }
        stage('build'){
            steps {
                sh'''
                 cd /var/lib/jenkins/workspace/cipipeline/movie-analyst-ui
                 pwd
                 docker build -t $registry:$BUILD_NUMBER .
                 docker images
                '''
                sh'pwd'
            }
        }
    }
}
