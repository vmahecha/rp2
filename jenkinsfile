pipeline {
    agent any 
    environment {
        BUILD_NUMBER = 'LATEST'
        registry = 'vmahecha07/nodefront'
        registry2 = 'vmahecha07/nodeapp'
        registryCredential = 'vmahecha07'
        dockerImage = ''
    }
    stages {
        stage('clone') {
            steps {
                echo 'clone the repo'
                sh 'rm -fr rp2'
                git branch: 'develop', url: 'https://github.com/vmahecha/rp2.git'
                sh 'pwd'
            }
        }
        stage('build'){
            steps {
                sh'./front.sh'
                sh'./back.sh'
            }
        }
        stage('push'){
            steps{
                withDockerRegistry([ credentialsId: "docker", url: "" ]) {
                      sh 'docker push $registry:$BUILD_NUMBER'
                      sh 'docker push $registry2:$BUILD_NUMBER'
                 }
            }
        }
        stage('Cleaning up') {
            steps{
                sh "docker rmi $registry:$BUILD_NUMBER"
                sh "docker rmi $registry2:$BUILD_NUMBER"
            }
        }
    }
}
