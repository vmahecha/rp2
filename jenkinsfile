pipeline {
    agent any 
    environment {
        BUILD_NUMBER = 'LATEST'
        registry = 'vmahecha07/nodefront'
        registryCredential = 'docker'
        dockerImage = ''
    }
    stages {
        stage('clone') {
            steps {
                echo 'clone the repo'
                sh 'rm -fr rp2'
                git branch: 'develop', url: 'https://github.com/vmahecha/rp2.git'
                sh 'pwd'
            }
        }
        stage('build'){
            steps {
                sh """ 
                #!/bin/bash
                cd /var/lib/jenkins/workspace/cipipeline/movie-analyst-ui
                """ 
                sh 'pwd'
                sh 'docker build -t $registry:$BUILD_NUMBER .'
                sh 'docker images'
            }
        }
        stage('push'){
            steps{
                script{
                     withDockerRegistry([ credentialsId: "docker" ]) {                
                          sh 'docker push $registry:$BUILD_NUMBER'
                      }
                      }
            }
        }
        stage('Cleaning up') {
            steps{
                sh 'docker rmi $registry:$BUILD_NUMBER'
            }
        }
    }
}
